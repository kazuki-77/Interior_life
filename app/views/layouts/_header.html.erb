 <header>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <%= link_to 'Interior Life', '/' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li><%= link_to 'マイページ', user_path(current_user), class: 'nav-link list-item text-dark' %></li>
          <li><%= link_to 'ユーザー', users_path, class: 'nav-link list-item text-dark' %></li>
          <li><%= link_to '投稿一覧', post_images_path, class: 'nav-link list-item text-dark' %></li>
          <li><%= link_to '新規投稿', new_post_image_path, class: 'nav-link list-item text-dark' %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link list-item text-dark' %></li><br>
          <div class="search">
            <%= form_with url: search_path, method: :get, local: true do |f| %>
              <%= f.text_field :keyword %>
              <%= f.submit "検索", class: "btn btn-primary" %>
            <% end %>
          </div>  
        <% else %>
          <li><%= link_to 'トップページ', root_path, class: 'nav-link text-dark' %></li>
          <li><%= link_to '概要', about_path, class: 'nav-link text-dark' %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: 'nav-link text-dark' %></li>
          <li><%= link_to 'ログイン', new_user_session_path, class: 'nav-link text-dark'%></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>