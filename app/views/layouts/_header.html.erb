 <header>
  <nav class="navbar navbar-expand-lg navbar-light">
  <div class="logo">
    <%= link_to "Interior Life", root_path, class: "logo-name" %>
  </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto pt-2">
      <% if user_signed_in? %>
        <li><%= link_to 'Home', user_path(current_user), class: 'nav-link list-item text-dark mr-2' %></li>
        <li><%= link_to 'About', about_path, class: 'nav-link text-dark mr-2' %></li>
        <li><%= link_to 'User', users_path, class: 'nav-link list-item text-dark mr-2' %></li>
        <li><%= link_to 'PostImage', post_images_path, class: 'nav-link list-item text-dark mr-2' %></li>
        <li><%= link_to 'New PostImage', new_post_image_path, class: 'nav-link list-item text-dark mr-2' %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link list-item text-dark mr-3' %></li><br>
        <div class="form-group form-inline pt-1">
          <%= form_with url: search_path, method: :get, local: true do |f| %>
            <%= f.text_field :keyword, class: "form_control" %>
            <%= f.submit "search", class: "btn btn-outline-light btn-radius ml-1 form-control text-search" %>
          <% end %>
        </div>
      <% else %>
        <li><%= link_to 'Top', root_path, class: 'nav-link text-dark mr-2' %></li>
        <li><%= link_to 'About', about_path, class: 'nav-link text-dark mr-2' %></li>
        <li><%= link_to 'Sign up', new_user_registration_path, class: 'nav-link text-dark mr-2' %></li>
        <li><%= link_to 'Login', new_user_session_path, class: 'nav-link text-dark mr-2'%></li>
      <% end %>
      </ul>
    </div>
  </nav>
</header>