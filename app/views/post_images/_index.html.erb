<% post_images.each do |post_image| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_image_path(post_image.id) do %>
      <%= attachment_image_tag post_image, :image, class: "card-img-top" %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg", class: "mt-3 rounded-circle" %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to post_image_path(post_image.id), class: "text-dark" do %>
              <strong><%= post_image.title %></strong>
            <% end %>
          </p>
          <p class="card-text"><%= post_image.caption %></p>
          <span><%= post_image.user.name %> </span>
          <span><%= link_to "#{post_image.post_comments.count}コメント ", post_image_path(post_image.id), class: "test-dark" %></span>
          <span class="favorites_buttons">
            <% if post_image.favorited_by?(current_user) %>
              <%= link_to post_image.favorites.count, post_image_favorites_path(post_image), method: :delete, class: "fas fa-heart heart-red" %>
            <% else %>
              <%= link_to post_image.favorites.count, post_image_favorites_path(post_image), method: :post, class: "fas fa-heart heart-blue" %>
            <% end %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>