<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-light p-4 mb-0">画像投稿フォーム</h4>
      <div class="form-body p-4">
        <%= render 'post_images/errors', post_image: @post_image %>
        <!-- 投稿フォーム -->
        <%= form_with model: @post_image, local: true do |f| %>
          <%= f.attachment_field :image, class: "w-100" %>
          <div class="input-group mb-3 mt-4">
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <%= f.text_area :caption, class: "form-control", rows:"3" %>
          <hr>
          <%= f.submit "投稿", class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

