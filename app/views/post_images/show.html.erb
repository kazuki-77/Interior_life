<div class="post-image-box py-5">
  <div class="card w-50 mx-auto shadow-lg">
    <%= attachment_image_tag @post_image, :image, class:"card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag @post_image.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg", class: "mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
              <strong><i class="far fa-flag"></i><span> <%= @post_image.title %></span></strong>
          </p>
          <p class="card-title">説明：<%= @post_image.caption %></p>
          <span>
            <i class="fas fa-user"></i> By
            <%= link_to user_path(@post_image.user.id) do %>
              <%= @post_image.user.name %>
            <% end %>  ｜
          </span>
          <span><i class="fa fa-calendar"></i> <%= @post_image.created_at.strftime('%Y/%m/%d') %> ｜ </span>
          <span><i class="fa fa-comment"></i> <%= link_to "#{@post_image.post_comments.count}", post_image_path(@post_image.id), class: "text-dark" %> ｜ </span>
          <!-- いいね機能 部分テンプレート -->
          <span id="favorite_btn_<%= @post_image.id %>"><%= render 'favorites/favorite-btn', post_image: @post_image %></span>
          <% if @post_image.user == current_user %>
            <span> ｜ </span><%= link_to "削除", post_image_path(@post_image), method: :delete %>
          <% end %>
        </div>
      </div>
      <hr>
      <div  id="post_image_<%= @post_image.id %>" class="comments card-text">
        <!-- コメント機能 部分テンプレート -->
        <%= render 'post_comments/post_comment', post_image: @post_image %>
      </div>
      <hr>
      <div id="comment_area" class="new-comment card-text">
        <!-- コメントフォーム 部分テンプレート -->
        <%= render 'post_comments/form', post_image: @post_image, post_comment: @post_comment %>
      </div>
    </div>
  </div>
</div>