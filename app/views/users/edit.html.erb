<div class="bg-image">
  <div class="container form-box">
    <div class="row d-flex justify-content-center">
      <div class="col col-lg-8">
      <h3 class="text-center new-post">Edit Profile</h3>
        <%= render 'users/error', user: @user %>
        <%= form_with model: @user, local: true do |f| %>
          <%= f.attachment_field :profile_image, class: "w-100 mt-3" %>
          <div class="mb-3 mt-4">
            <div><%= f.label :"Name", class: "from-control" %></div>
            <%= f.text_field :name, class: "form-control w-50" %>
          </div>
          <%= f.label :"Introduction", class: "from-control" %>
          <%= f.text_area :introduction, class: "form-control", rows:"3" %>
          <hr>
          <div class="submit-btn">
            <%= f.submit "更新", class: "btn btn-lg btn-block btn-info mt-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>