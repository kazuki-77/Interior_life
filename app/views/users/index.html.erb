<div class="user-box">
  <div class="container">
    <div class="row d-flex justify-content-center user_index">
      <div class="col mt-5">
        <h1 class="user_title">~ Users ~</h1>
        <table class="table table-hover mt-3">
          <tbody class="text-center">
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg", class: "rounded-circle"%></td>
                <td class= "font-weight-bold"><%= link_to user.name, user_path(user.id) %></td>
                <td><%= render 'relationships/follow', user: user %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>