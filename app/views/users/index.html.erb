<div class="user-container">
  <div class="row-8">
    <div class="col">
      <table class="table table-light table-hover">
        <tbody>
          <% @user.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg", class: "rounded-circle"%></td>
              <td><%= link_to user.name, user_path(user.id) %></td>
              <td><%= user.introduction %></td>
              <td>フォロー記述部分
                <%# if user != current_user %>
                  <%# if user.is_followed_by?(current_user) %>
                    <%#= link_to "フォロー中", user_registration_path(user), method: :delete, class: "btn btn-danger" %>
                  <%# else %>
                    <%#= link_to "フォローする",user_registration_path(user), method: :post, class: "btn btn-danger" %>
                  <%# end %>
                <%# end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>