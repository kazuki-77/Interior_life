<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-9 mt-5 shadow">
      <h1>フォロワー一覧</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>ユーザー名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg", class: "rounded-circle" %></td>
              <td><%= user.name %></td>
              <td><%= render 'relationships/follow', user: user %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>